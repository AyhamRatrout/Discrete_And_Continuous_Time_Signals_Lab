n = (-20:20);

unit_step = n>= 0;
shifted_unit_step = n >= 10;

a1 = 0.8;
a2 = 1.0;
a3 = 1.5;

y1 = ((a1).^n) .* (unit_step - shifted_unit_step);
subplot(3, 1, 1);
orient('tall');
plot(n, y1);
xlabel('n');
ylabel('0.8^n * (u(n) − u(n − 10))');

y2 = ((a2).^n) .* (unit_step - shifted_unit_step);
subplot(3, 1, 2);
orient('tall');
plot(n, y2);
xlabel('n');

y3 = ((a3).^n) .* (unit_step - shifted_unit_step);
subplot(3, 1, 3);
orient('tall');
plot(n, y3);
xlabel('n');
